{
    "name": "pestphp/pest-plugin-global-assertions",
    "description": "A plugin to add global assertions to Pest",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "plugin"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.3 || ^8.0",
        "pestphp/pest": "^0.3",
        "pestphp/pest-plugin": "^0.3"
    },
    "conflict": {
        "pestphp/pest": "<0.3"
    },
    "autoload": {
        "files": [
            "src/compiled.php"
        ]
    },
    "require-dev": {
        "pestphp/pest-dev-tools": "dev-master"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.4.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "compile": "@php scripts/compile.php",
        "lint": "rector process src && php-cs-fixer fix -v",
        "test:lint": "php-cs-fixer fix -v --dry-run && rector process src --dry-run",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
